<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.CampusReviewsMapper">
    
    <resultMap type="CampusReviews" id="CampusReviewsResult">
        <result property="id"    column="id"    />
        <result property="orderId"    column="order_id"    />
        <result property="reviewerId"    column="reviewer_id"    />
        <result property="reviewedUserId"    column="reviewed_user_id"    />
        <result property="rating"    column="rating"    />
        <result property="comment"    column="comment"    />
        <result property="createdAt"    column="created_at"    />
    </resultMap>

    <sql id="selectCampusReviewsVo">
        select id, order_id, reviewer_id, reviewed_user_id, rating, comment, created_at from campus_reviews
    </sql>

    <select id="selectCampusReviewsList" parameterType="CampusReviews" resultMap="CampusReviewsResult">
        <include refid="selectCampusReviewsVo"/>
        <where>  
            <if test="orderId != null "> and order_id = #{orderId}</if>
            <if test="reviewerId != null "> and reviewer_id = #{reviewerId}</if>
            <if test="reviewedUserId != null "> and reviewed_user_id = #{reviewedUserId}</if>
            <if test="rating != null "> and rating = #{rating}</if>
            <if test="comment != null  and comment != ''"> and comment = #{comment}</if>
            <if test="createdAt != null "> and created_at = #{createdAt}</if>
        </where>
    </select>
    
    <select id="selectCampusReviewsById" parameterType="Long" resultMap="CampusReviewsResult">
        <include refid="selectCampusReviewsVo"/>
        where id = #{id}
    </select>

    <insert id="insertCampusReviews" parameterType="CampusReviews" useGeneratedKeys="true" keyProperty="id">
        insert into campus_reviews
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderId != null">order_id,</if>
            <if test="reviewerId != null">reviewer_id,</if>
            <if test="reviewedUserId != null">reviewed_user_id,</if>
            <if test="rating != null">rating,</if>
            <if test="comment != null">comment,</if>
            <if test="createdAt != null">created_at,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderId != null">#{orderId},</if>
            <if test="reviewerId != null">#{reviewerId},</if>
            <if test="reviewedUserId != null">#{reviewedUserId},</if>
            <if test="rating != null">#{rating},</if>
            <if test="comment != null">#{comment},</if>
            <if test="createdAt != null">#{createdAt},</if>
         </trim>
    </insert>

    <update id="updateCampusReviews" parameterType="CampusReviews">
        update campus_reviews
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderId != null">order_id = #{orderId},</if>
            <if test="reviewerId != null">reviewer_id = #{reviewerId},</if>
            <if test="reviewedUserId != null">reviewed_user_id = #{reviewedUserId},</if>
            <if test="rating != null">rating = #{rating},</if>
            <if test="comment != null">comment = #{comment},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCampusReviewsById" parameterType="Long">
        delete from campus_reviews where id = #{id}
    </delete>

    <delete id="deleteCampusReviewsByIds" parameterType="String">
        delete from campus_reviews where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>