<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.CampusComplaintsMapper">
    
    <resultMap type="CampusComplaints" id="CampusComplaintsResult">
        <result property="id"    column="id"    />
        <result property="complainantId"    column="complainant_id"    />
        <result property="accusedId"    column="accused_id"    />
        <result property="productId"    column="product_id"    />
        <result property="orderId"    column="order_id"    />
        <result property="title"    column="title"    />
        <result property="content"    column="content"    />
        <result property="status"    column="status"    />
        <result property="handlerId"    column="handler_id"    />
        <result property="handledAt"    column="handled_at"    />
        <result property="createdAt"    column="created_at"    />
    </resultMap>

    <sql id="selectCampusComplaintsVo">
        select id, complainant_id, accused_id, product_id, order_id, title, content, status, handler_id, handled_at, created_at from campus_complaints
    </sql>

    <select id="selectCampusComplaintsList" parameterType="CampusComplaints" resultMap="CampusComplaintsResult">
        <include refid="selectCampusComplaintsVo"/>
        <where>  
            <if test="complainantId != null "> and complainant_id = #{complainantId}</if>
            <if test="accusedId != null "> and accused_id = #{accusedId}</if>
            <if test="productId != null "> and product_id = #{productId}</if>
            <if test="orderId != null "> and order_id = #{orderId}</if>
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="handlerId != null "> and handler_id = #{handlerId}</if>
            <if test="handledAt != null "> and handled_at = #{handledAt}</if>
            <if test="createdAt != null "> and created_at = #{createdAt}</if>
        </where>
    </select>
    
    <select id="selectCampusComplaintsById" parameterType="Long" resultMap="CampusComplaintsResult">
        <include refid="selectCampusComplaintsVo"/>
        where id = #{id}
    </select>

    <insert id="insertCampusComplaints" parameterType="CampusComplaints">
        insert into campus_complaints
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="complainantId != null">complainant_id,</if>
            <if test="accusedId != null">accused_id,</if>
            <if test="productId != null">product_id,</if>
            <if test="orderId != null">order_id,</if>
            <if test="title != null">title,</if>
            <if test="content != null">content,</if>
            <if test="status != null">status,</if>
            <if test="handlerId != null">handler_id,</if>
            <if test="handledAt != null">handled_at,</if>
            <if test="createdAt != null">created_at,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="complainantId != null">#{complainantId},</if>
            <if test="accusedId != null">#{accusedId},</if>
            <if test="productId != null">#{productId},</if>
            <if test="orderId != null">#{orderId},</if>
            <if test="title != null">#{title},</if>
            <if test="content != null">#{content},</if>
            <if test="status != null">#{status},</if>
            <if test="handlerId != null">#{handlerId},</if>
            <if test="handledAt != null">#{handledAt},</if>
            <if test="createdAt != null">#{createdAt},</if>
         </trim>
    </insert>

    <update id="updateCampusComplaints" parameterType="CampusComplaints">
        update campus_complaints
        <trim prefix="SET" suffixOverrides=",">
            <if test="complainantId != null">complainant_id = #{complainantId},</if>
            <if test="accusedId != null">accused_id = #{accusedId},</if>
            <if test="productId != null">product_id = #{productId},</if>
            <if test="orderId != null">order_id = #{orderId},</if>
            <if test="title != null">title = #{title},</if>
            <if test="content != null">content = #{content},</if>
            <if test="status != null">status = #{status},</if>
            <if test="handlerId != null">handler_id = #{handlerId},</if>
            <if test="handledAt != null">handled_at = #{handledAt},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCampusComplaintsById" parameterType="Long">
        delete from campus_complaints where id = #{id}
    </delete>

    <delete id="deleteCampusComplaintsByIds" parameterType="String">
        delete from campus_complaints where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>