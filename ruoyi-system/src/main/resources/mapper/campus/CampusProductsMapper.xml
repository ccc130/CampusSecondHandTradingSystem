<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.CampusProductsMapper">
    
    <resultMap type="CampusProducts" id="CampusProductsResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="categoryId"    column="category_id"    />
        <result property="title"    column="title"    />
        <result property="description"    column="description"    />
        <result property="price"    column="price"    />
        <result property="conditions"    column="conditions"    />
        <result property="status"    column="status"    />
        <result property="imageUrls"    column="image_urls"    />
        <result property="viewCount"    column="view_count"    />
        <result property="createdAt"    column="created_at"    />
        <result property="updatedAt"    column="updated_at"    />
    </resultMap>

    <sql id="selectCampusProductsVo">
        select id, user_id, category_id, title, description, price, conditions, status, image_urls, view_count, created_at, updated_at from campus_products
    </sql>

    <select id="selectCampusProductsList" parameterType="CampusProducts" resultMap="CampusProductsResult">
        <include refid="selectCampusProductsVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="categoryId != null "> and category_id = #{categoryId}</if>
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="conditions != null "> and conditions = #{conditions}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectCampusProductsById" parameterType="Long" resultMap="CampusProductsResult">
        <include refid="selectCampusProductsVo"/>
        where id = #{id}
    </select>

    <insert id="insertCampusProducts" parameterType="CampusProducts" useGeneratedKeys="true" keyProperty="id">
        insert into campus_products
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="title != null and title != ''">title,</if>
            <if test="description != null">description,</if>
            <if test="price != null">price,</if>
            <if test="conditions != null">conditions,</if>
            <if test="status != null">status,</if>
            <if test="imageUrls != null">image_urls,</if>
            <if test="viewCount != null">view_count,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="categoryId != null">#{categoryId},</if>
            <if test="title != null and title != ''">#{title},</if>
            <if test="description != null">#{description},</if>
            <if test="price != null">#{price},</if>
            <if test="conditions != null">#{conditions},</if>
            <if test="status != null">#{status},</if>
            <if test="imageUrls != null">#{imageUrls},</if>
            <if test="viewCount != null">#{viewCount},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
         </trim>
    </insert>

    <update id="updateCampusProducts" parameterType="CampusProducts">
        update campus_products
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="description != null">description = #{description},</if>
            <if test="price != null">price = #{price},</if>
            <if test="conditions != null">conditions = #{conditions},</if>
            <if test="status != null">status = #{status},</if>
            <if test="imageUrls != null">image_urls = #{imageUrls},</if>
            <if test="viewCount != null">view_count = #{viewCount},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCampusProductsById" parameterType="Long">
        delete from campus_products where id = #{id}
    </delete>

    <delete id="deleteCampusProductsByIds" parameterType="String">
        delete from campus_products where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>